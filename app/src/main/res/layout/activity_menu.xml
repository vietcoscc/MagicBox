<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/activity_menu_edt_input"
        android:layout_margin="@dimen/margin"
        android:hint="@string/activity_menu_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginRight="@dimen/margin_right"
        android:id="@+id/activity_menu_btn_start"
        android:layout_gravity="right"
        android:text="@string/activity_menu_start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/activity_menu_txtv_win_lose"
        android:textSize="@dimen/activity_menu_win_lose"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>